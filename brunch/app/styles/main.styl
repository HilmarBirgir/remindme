// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

// Apply a natural box layout model to all elements.
// http://paulirish.com/2012/box-sizing-border-box-ftw/
*
  box-sizing: border-box

body
  font-family Arial, Helvetica, sans-serif
  background #1a5481

a
  color black
  text-decoration none

a:hover
  color #1a5481

a:visited
  color black


.header
  height 160px
  border 2px solid black
  border-radius 15px
  margin-top 20px
  padding 20px
  background white

  .links
    a
      float right
      margin-left 10px

    .active
      text-decoration underline

    margin-top 80px


.content
  margin-bottom 30px

  .bubble
    background white
    position relative
    border 2px solid black
    border-radius 15px
    margin-top 20px
    padding 20px


    #abouttext
      background-image:url('../images/left.png')
      position absolute
      top 40%
      left -90px
      font-size 10px
      height 104px
      padding-top 45px
      padding-left 9px
      padding-right 5px

    #stafftext
      background-image:url('../images/right.png')
      position absolute
      top 40%
      right -90px
      font-size 10px
      height 104px
      padding-top 45px
      padding-left 9px
      padding-right 11px

    #eskiright
      background-image:url('../images/right.png')
      position absolute
      top 40%
      right -90px
      font-size 10px
      height 104px
      padding-top 45px
      padding-left 15px
      padding-right 16px

    #eskileft
      background-image:url('../images/left.png')
      position absolute
      top 40%
      left -90px
      font-size 10px
      height 104px
      padding-top 45px
      padding-left 16px
      padding-right 15px

    .left
      position absolute
      top 40%
      left -100px

    .left_staff
      position absolute
      top 40%
      left -100px

    .right
      position absolute
      top 40%
      right -100px

    .right_about
      position absolute
      top 40%
      right -100px

    .starfsmadur
      height 280px
      width 440px
      display inline-block

      .texti
        width 200px
        float right

      .mynd
        width 200px
        float left


  #about
    display none

  #staff
    display none

.footer
  margin-bottom 100px
  margin-top 20px
  position relative

  #twitter
    background #2d4e99
    border-radius 15px
    padding 20px
    height 350px
    border 4px solid black

    img
      margin-right 10px

    p
      display inline
      color white

    .date
      margin-left 34px
      font-weight bold




