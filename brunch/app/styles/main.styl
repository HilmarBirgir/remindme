// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

// Apply a natural box layout model to all elements.
// http://paulirish.com/2012/box-sizing-border-box-ftw/
*
  box-sizing: border-box

body
  font-family Arial, Helvetica, sans-serif
  background #1a5481

a
  color black
  text-decoration none

a:hover
  color #1a5481

a:visited
  color black


.header
  height 160px
  border 2px solid black
  border-radius 15px
  margin-top 20px
  padding 20px
  background white
  margin-bottom 20px

  .links
    a
      float right
      margin-left 10px

    .active
      text-decoration underline

    margin-top 80px

.hide
  display none

.tabs
  padding-left 60px
  margin-bottom -4px

  .tab
    width 270px
    display inline-block
    padding-top 10px
    padding-bottom 10px
    text-align center
    background white
    border 2px solid black
    transition all 1s ease

  .tab:hover
    background #1a5481

.content
  margin-bottom 30px

  .bubble
    background white
    position relative
    border 2px solid black
    border-radius 15px
    padding 20px

    #blog
      color #1a5481
      text-decoration underline

    .starfsmadur
      height 280px
      width 440px
      display inline-block

      .texti
        width 200px
        float right

      .mynd
        width 200px
        float left

.footer
  margin-bottom 100px
  margin-top 20px
  position relative

  #twitter
    background #2d4e99
    border-radius 15px
    padding 20px
    height 350px
    border 4px solid black

    img
      margin-right 10px

    p
      display inline
      color white

    .date
      margin-left 34px
      font-weight bold




